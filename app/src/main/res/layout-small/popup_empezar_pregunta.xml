<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="515dp"
    android:layout_marginBottom="63dp"
    android:background="@android:color/transparent"
    android:padding="0dp"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="349dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="64dp"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="38dp">

            <TextView
                android:id="@+id/campoTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/image"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="40dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="TEXTO"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </ScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="#5a98df"
            android:gravity="center"
            android:text="Â¿ LISTO PARA EMPEZAR ?"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelarPregunta"
            android:layout_width="126dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnEmpezarPregunta"
            android:layout_marginBottom="12dp"
            android:background="@drawable/borde_redondo_boton"
            android:text="Cancelar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnEmpezarPregunta"
            android:layout_width="126dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/borde_redondo_boton"
            android:text="Empezar"
            android:textColor="@color/white" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imagenIzqquierda"
        android:layout_width="139dp"
        android:layout_height="295dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:src="@drawable/mascota_entrenar" />



</RelativeLayout>