<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="515dp"
    android:layout_marginBottom="63dp"
    android:background="@android:color/transparent"
    android:padding="0dp"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="349dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@color/white">


        <Button
            android:id="@+id/enviar"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"
            android:background="@drawable/borde_redondo_boton"
            android:text="Enviar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancelarComentario"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:background="@drawable/borde_redondo_boton"
            android:text="Cancelar"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tituloComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="COMENTARIO"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/comentariotxt"
            android:layout_width="190dp"
            android:layout_marginLeft="25dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:hint="Escriba su comentario"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imagenIzqquierda"
        android:layout_width="129dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="103dp"
        android:src="@drawable/comentarios" />


</RelativeLayout>